@{ ViewData["Title"] = "Página Inicial"; }

<div class="main-panel view-html" style="width:100%;">
    <div class="content-wrapper">
        <div class="row">
            <div class="col">

                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Gestão dos Funcionários do IPG</h4>
                        <p class="card-description">Instituto Politécnico da Guarda</p>
                        <div class="mt-5">
                            <div class="timeline">
                                <div class="timeline-wrapper timeline-wrapper-warning">
                                    <div class="timeline-badge"></div>
