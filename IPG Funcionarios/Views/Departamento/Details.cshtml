@model IPG_Funcionarios.Models.Departamento

@{
    ViewData["Title"] = "Detalhe do Departamento";
}



    <div class="main-panel" style="width:100%;">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">
                    <a asp-action="Index"><i class="mdi mdi-keyboard-backspace"></i> Voltar </a>
                </h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">Views</li>
                        <li class="breadcrumb-item">Departamento</li>
                        <li class="breadcrumb-item active" aria-current="page">Details</li>
                    </ol>
                </nav>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-description">
                                Detalhes do Departamento:
                            </p>
                            <div class="row" role="Details">
                                <div class="col-12">
                                    <div id="order-listing_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                        <div class="row">
                                            <div class="col-sm-12 col-md-6"><div id="order-listing_filter" class="dataTables_filter"></div></div>

                                        </div>
                                        <div class="row">
                                            <div class="col-m-12">
                                                <table id="order-listing" class="table dataTable no-footer">

                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    <tbody>
                                                        <div role="row" class="even">
                                                            <div class="mb-2">
                                                                <input asp-for="Nome" class="form-control" disabled>
                                                                <span asp-validation-for="Nome" class="text-danger"></span>
                                                            </div>



                                                            <div class="mb-2">
                                                                <div class="w-100 d-flex">
                                                                    <a asp-action="Edit" asp-route-id="@Model.DepartamentoId">

                                                                        Editar
                                                                    </a> |


                                                                </div>
                                                            </div>
                                                        </div>

                                                    </tbody>

                                                </table>
                                              </div>
                                         </div>
                                         
                                     </div>
                                 </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>
        </div>
    </div>
