
@model DepartamentoViewsModels

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departamentos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamentos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Departamentos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contacto)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DepartamentoId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DepartamentoId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DepartamentoId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
