@page
@model IndexModel
@{
    ViewData["Title"] = "Minha página";
    ViewData["ActivePage"] = ManageNavPages.Index;
    ViewData["pagetype"] = "2";
}
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> &nbsp;Configurações pessoais</h4>
            <form id="profile-form" method="post">
                <div role="application" class="wizard clearfix vertical" id="steps-uid-1">
                    <div class="steps clearfix">
                        <ul role="tablist">
                            <partial name="_PersonalSettingsListMenu" />
                        </ul>
                    </div>
                    <div class="content clearfix">
                        <section id="steps-uid-1-p-0" role="tabpanel" aria-labelledby="steps-uid-1-h-0" class="body current" aria-hidden="false">
                            <h3>Infomações pessoais</h3>
                            <br/>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.PhoneNumber"></label>
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="clearfix">
                    <div style="margin-right:2%;">
                        <button id="update-profile-button" type="submit"
                         class="c-btn c-btn-primary w-25 float-right">
                            Salvar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}